{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "serve": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "deploy": "wrangler pages deploy ../../dist/apps/web"
  },
  "nx": {
    "tags": [
      "scope:web"
    ],
    "projectType": "application",
    "sourceRoot": "apps/web",
    "targets": {
      "build": {
        "inputs": [
          "{projectRoot}/**/*",
          "!{projectRoot}/**/*.md"
        ],
        "options": {
          "outputPath": "dist/apps/web",
          "skipTypeCheck": true
        },
        "outputs": [
          "{options.outputPath}",
          "{projectRoot}/.nuxt"
        ]
      }
    }
  }
}
